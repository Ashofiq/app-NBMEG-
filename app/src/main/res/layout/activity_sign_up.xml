<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".SignUpActivity"
    android:background="@drawable/singupbg">



        <EditText
            android:id="@+id/signUpPageNameEditTextId"
            android:layout_width="match_parent"
            android:layout_marginTop="200dp"
            android:hint="Enter Your Name"
            android:textSize="19sp"
            android:layout_height="50dp"
            android:background="#f5f5f0"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/signUpPageEmailEditTextId"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:hint="Enter Your Email"
            android:textSize="19sp"
            android:layout_height="50dp"
            android:background="#f5f5f0"
            android:gravity="center"/>

        <EditText
            android:id="@+id/signUpPageUserNameEditTextId"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:hint="Enter Your UserName"
            android:textSize="19sp"
            android:layout_height="50dp"
            android:background="#f5f5f0"
            android:gravity="center"/>

        <EditText
            android:id="@+id/signUpPagePasswordEditTextId"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:hint="Enter Your Password"
            android:textSize="19sp"
            android:layout_height="50dp"
            android:background="#f5f5f0"
            android:gravity="center"/>

        <Button
            android:id="@+id/signUpPageSignUpButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#1abc9c"
            android:text="SignUp"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Login"
            android:onClick="login"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>